<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Foglalás</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' type='text/css' media='screen' href='main.css'>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <form action="order" method="get">
            <div class="form-group">
                <label for="name">Név</label>
                <input class="form-control" id="name" type="text" name="name" value=<%= name %>>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input class="form-control" id="email" type="email" name="email" value=<%= email %>>
            </div>
            <div class="form-group">
                <label for="date">Dátum</label>
                <input class="form-control" id="date" type="datetime-local" name="date" value=<%= date %>>
            </div>
            <div class="form-group">
                <label for="audiance">Személyek száma</label>
                <input class="form-control" id="audiance" type="number" name="audiance" min="1" max="10" value=<%= audiance %>>
            </div>
            <div>
                <% error.forEach(err => { %>
                    <div class="alert alert-danger" role="alert">
                        <%= err %>
                    </div>
                <% }); %>
            </div>
            <input class="btn btn-primary" type="submit" value="Lefoglal">
        </form>
    </div>
</body>
</html>
